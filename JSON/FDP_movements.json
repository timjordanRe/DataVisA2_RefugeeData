{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/FDP_movement.csv"
    },
    "mark": {
        "type": "rect",
        "strokeWidth": 2
    },
    "transform": [{
            "calculate": "datum.FDP+1",
            "as": "FDPlog"
        },
        {
            "window": [{
                "op": "rank",
                "as": "ranking"
            }],
            "sort": [{
                "field": "FDP",
                "order": "descending"
            }]
        },
        {
            "filter": "datum.ranking < 30"
        }
    ],
    "encoding": {
        "x": {
            "field": "Country of origin",
            "type": "nominal",
            "title": "Asylum"
        },
        "y": {
            "field": "Country of asylum",
            "type": "nominal"
        },
        "color": {
            "field": "FDPlog",
            "type": "quantitative",
            "scale": {
                "type": "log"
            },
            "title": ""
        }
    }
}