{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Countries of Asylum",
    "projection": { "type": "naturalEarth1" },
    "params": [{
        "name": "year_selection",
        "value": 2021,
        "bind": {
            "input": "range",
            "min": 2016,
            "max": 2021,
            "step": 1,
            "name": "Year: "
        }
    }],
    "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/JSON%20files/ne_50m_admin_0_countries.json",
                "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
            },
            "mark": { "fill": "lightgray", "type": "geoshape", "stroke": "white" },
            "encoding": { "fillOpacity": { "value": 0.5 }, "color": { "value": "gray" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/JSON%20files/ne_50m_admin_0_countries.json",
                "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
            },
            "transform": [{
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/yearly_refugees_only.csv"
                        },
                        "key": "Country of Asylum",
                        "fields": ["Refugees", "Country of Origin", "Year"]
                    }
                },
                { "calculate": "datum.Refugees", "as": "Number of Refugees" },
                { "filter": "datum.Year == year_selection" }
            ],
            "mark": { "type": "geoshape", "stroke": "black", "cursor": "pointer" },
            "encoding": {
                "color": {
                    "field": "Number of Refugees",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "purpleblue",
                        "type": "log",
                        "domain": [1, 1000000]
                    },
                    "legend": { "format": ".1s" }
                },
                "tooltip": [
                    { "field": "properties.NAME", "type": "nominal", "title": "Country" },
                    {
                        "field": "Refugees",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Number of Refugees"
                    }
                ]
            }
        }
    ],
    "config": {}
}