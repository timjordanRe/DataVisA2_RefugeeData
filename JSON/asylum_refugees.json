{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "",
    "projection": { "type": "naturalEarth1" },
    "params": [{
        "name": "Year_selection",
        "value": 2021,
        "bind": {
            "input": "range",
            "min": 2010,
            "max": 2021,
            "step": 1,
            "name": "Year: "
        }
    }],
    "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/JSON/ne_50m_admin_0_countries.json",
                "format": { "type": "topojson", "feature": "ne_50m_admin_0_countries" }
            },
            "transform": [{ "filter": "datum.properties.NAME != 'Antarctica'" }],
            "mark": { "fill": "lightgray", "type": "geoshape", "stroke": "white" },
            "encoding": { "fillOpacity": { "value": 0.5 }, "color": { "value": "gray" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/countries_of_asylum_for_refugees.csv"
            },
            "transform": [{
                    "lookup": "Country of Asylum",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/JSON/ne_50m_admin_0_countries.json",
                            "format": {
                                "type": "topojson",
                                "feature": "ne_50m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as": "Country"
                },
                { "calculate": "datum.Refugees", "as": "Number of Refugees" },
                { "filter": "datum.Refugees > 0" },
                { "filter": "datum.Year == Year_selection" }
            ],
            "encoding": {
                "shape": { "field": "Country", "type": "geojson" },
                "color": {
                    "field": "Number of Refugees",
                    "type": "quantitative",
                    "scale": { "scheme": "purpleblue", "type": "log", "domain": [1, 5000000] },
                    "legend": { "format": ".1s" }
                },
                "tooltip": [{
                        "field": "Country.properties.NAME",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "Refugees",
                        "type": "quantitative",
                        "format": ",",
                        "title": "Number of Refugees"
                    }
                ]
            },
            "layer": [
                { "mark": { "type": "geoshape", "stroke": "white", "cursor": "pointer" } },
                {
                    "transform": [{
                            "window": [{ "op": "rank", "as": "ranking" }],
                            "sort": [{
                                "field": "Refugees",
                                "order": "descending"
                            }]
                        },
                        { "filter": "datum.ranking == 1" },
                        {
                            "calculate": "datum['Country of Asylum'] + ' The worst earthquake of; the selected period: ' + datum['Refugees']",
                            "as": "text_annotation_raw"
                        },
                        {
                            "calculate": "split(datum.text_annotation_raw, ';')",
                            "as": "text_annotation"
                        }
                    ],
                    "mark": {
                        "type": "text",
                        "color": "black",
                        "align": "right",
                        "dx": -8,
                        "dy": -8,
                        "baseline": "middle",
                        "fontStyle": "bold",
                        "fontSize": 13
                    },
                    "encoding": {
                        "text": { "field": "text_annotation" },
                        "color": { "value": "black" }
                    }
                }
            ]
        }

    ]
}