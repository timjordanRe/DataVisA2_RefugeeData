{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Refugees from Sudan",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega/main/docs/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {
          "lookup": "countries",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/world_country_and_usa_states_latitude_and_longitude_values.csv"
            },
            "key": "country"
          }
        }
      ],
      "mark": {"type": "geoshape"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/clean_refugee_data.csv"
      },
      "transform": [
        {"filter": {"field": "Country of Origin", "equal": "Sudan"}},
        {"filter": "datum.refugees > 0"},
        {
          "lookup": "Country of Origin ISO",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/world_country_and_usa_states_latitude_and_longitude_values.csv"
            },
            "key": "country_code",
            "fields": ["latitude", "longitude"]
          },
          "as": ["origin_latitude", "origin_longitude"]
        },
        {
          "lookup": "Country of Asylum ISO",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/timjordanRe/DataVisA2_RefugeeData/main/Datasets/world_country_and_usa_states_latitude_and_longitude_values.csv"
            },
            "key": "country_code",
            "fields": ["latitude", "longitude"]
          },
          "as": ["dest_latitude", "dest_longitude"]
        }
      ],
      "projection": {"type": "equirectangular"},
      "mark": "rule",
      "encoding": {
        "longitude": {"field": "origin_longitude", "type": "quantitative"},
        "latitude": {"field": "origin_latitude", "type": "quantitative"},
        "longitude2": {"field": "dest_longitude"},
        "latitude2": {"field": "dest_latitude"},
        "color": {"value": "#007229"}
      }
    }
  ]
}